{
    "extends": ["standard"],
    "rules":
    {
        "brace-style": ["error", "allman", {"allowSingleLine": true }],
        "indent": ["error", 4, {"SwitchCase": 1 }],
        "keyword-spacing": 2,
        "linebreak-style": [2, "unix"],
        "no-extra-semi": 2,
        "no-inline-comments": 2,
        "no-mixed-spaces-and-tabs": 2,
        "no-multi-spaces": 2,
        "no-trailing-spaces": 2,
        "no-undef": 2,
        "no-unused-vars": [2, {"args": "none"}],
        "no-var": 1,
        "no-const-assign": 2,
        "semi": [2, "always"]
    }
}