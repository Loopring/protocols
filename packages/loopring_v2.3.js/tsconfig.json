{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6"],
    "sourceMap": true,
    "inlineSources": true,
    "strictNullChecks": false,
    "strict": true,
    "strictPropertyInitialization": false,
    "rootDir": ".",
    "outDir": "build"
  },
  "include": [
    "node_modules/web3-typescript-typings/index.d.ts",
    "./node_modules/types-bn/index.d.ts",
    "index.ts",
    "./globals.d.ts",
    "src/*.ts",
    "src/**/*.ts",
    "test/*.ts",
    "test/**/*.ts"
  ]
}
