{
  "extends": "solium:recommended",
  "plugins": [
    "security"
  ],
  "rules": {
    "security/no-inline-assembly": "off",
    "security/no-block-members": "off",
    "security/no-low-level-calls": "off",
    "value-in-payable": "off",
    "no-empty-blocks": "off",
    "visibility-first": "error",
    "quotes": [
      "error",
      "double"
    ],
    "indentation": [
      "error",
      4
    ],
    "linebreak-style": [
      "error",
      "unix"
    ]
  }
}